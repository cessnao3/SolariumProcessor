    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "VisualSProc Launch",
            "cwd": "${workspaceFolder}/visual-sproc",
            //"lldb.launch.cwd": "${workspaceFolder}/visual-scpu",
            //"lldb.launch.relativePathBase": "${workspaceFolder}/visual-scpu",
            "cargo": {
                "args": [
                    "build",
                    "--manifest-path=visual-sproc/Cargo.toml"
                ]
            },
            //"program": "${cargo:program}",
            "args": []
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "SUB Launch",
            "cwd": "${workspaceFolder}/libsproc-sub",
            //"lldb.launch.cwd": "${workspaceFolder}/visual-scpu",
            //"lldb.launch.relativePathBase": "${workspaceFolder}/visual-scpu",
            "cargo": {
                "args": [
                    "build",
                    "--manifest-path=libsproc-sub/Cargo.toml"
                ]
            },
            //"program": "${cargo:program}",
            "args": []
        },
    ]
}
